# .env for TV Recommendation Service
# Wattowa = What To Watch?

COMPOSE_PROJECT_NAME=wattowa

# Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
COLLECTION_NAME=tvguide

# Embedding model
# English-only:
# MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
# Multilingual (Swedish etc.):
MODEL_NAME=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

SIMILARITY=cosine

# API
API_PORT=8000

# Optional. Only needed if you add ingestion again.
# EPG_URL=https://example.com/epg.json
# INGEST_INTERVAL_SECONDS=21600
